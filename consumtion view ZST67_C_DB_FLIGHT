   CityFrom,
   @EndUserText.label: 'From Airport'
   AirportFrom,
   @EndUserText.label: 'To Country'
   CountryTo,
   @EndUserText.label: 'To City'
   CityTo,
   @EndUserText.label: 'To Airport'
   AirportTo,
   @EndUserText.label: 'Departure Time'
   DepTime,
   @EndUserText.label: 'Arrival Time'
